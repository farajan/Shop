<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.oem.shop.HomeActivity">

    <ImageButton
        android:id="@+id/groups_img_btn"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="#ffffff"
        app:srcCompat="@drawable/btn_groups_click"
        android:layout_marginRight="39dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="88dp" />

    <ImageButton
        android:id="@+id/lists_img_btn"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="88dp"
        android:background="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn_lists_click"
        app:layout_constraintRight_toLeftOf="@+id/groups_img_btn"
        android:layout_marginRight="32dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <ImageButton
        android:id="@+id/friends_img_btn"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="#ffffff"
        app:srcCompat="@drawable/btn_friends_click"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="151dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/lists_img_btn"
        app:layout_constraintRight_toLeftOf="@+id/my_list_img_btn"
        android:layout_marginRight="32dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/my_list_img_btn"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="#ffffff"
        app:srcCompat="@drawable/btn_my_list_click"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="151dp"
        android:layout_marginRight="38dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/groups_img_btn"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
